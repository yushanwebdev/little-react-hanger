{
  "compilerOptions": {
    "baseUrl": "src",
    "rootDir": "src",
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true
  },
  "include": ["src"],
  "$schema": "https://json.schemastore.org/tsconfig"
}
